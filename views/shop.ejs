<%-include('partials/start.ejs')%>
<%-include('partials/header.ejs')%>
<%-include('partials/search.ejs')%>
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Fresh and Organic</p>
                    <h1>Shop</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="product-section mt-150 mb-150">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="product-filters">
                    <ul>
                        <li class="active" data-filter="">All Products</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row product-lists">
            <!-- Start Products -->
            <% product.forEach(pr => { %>
            <div class="col-lg-4 col-md-6 text-center strawberry">
                <div class="single-product-item">
                    <div class="product-image">
                        <a href="single-product.html"><img src="/uploads/<%= pr.product_image %>" alt="<%= pr.product_name %>"></a>
                    </div>
                    <h3><%= pr.product_name %></h3>
                    <p class="product-price"><span>Per Kg</span>â‚± <%= pr.price %> </p>
                    
                    <!-- Styled form button -->
                    <form action="/add-to-cart" method="POST" style="display:inline;">
                        <input type="hidden" name="product_id" value="<%= pr.product_id %>">
                        <input type="hidden" name="product_name" value="<%= pr.product_name %>">
                        <input type="hidden" name="product_image" value="<%= pr.product_image %>">
                        <input type="hidden" name="price" value="<%= pr.price %>">
                        <button type="submit" class="cart-btn">
                            <i class="fas fa-shopping-cart"></i> Add to Cart
                        </button>
                    </form>
                </div>
            </div>
            <% }) %>
            <!-- End Products -->
        </div>

        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="pagination-wrap">
                    <ul>
                        <li><a href="#">Prev</a></li>
                        <li><a href="#">1</a></li>
                        <li><a class="active" href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<%-include('partials/logo.ejs')%>
<%-include('partials/footer.ejs')%>
<%-include('partials/end.ejs')%>